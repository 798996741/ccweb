<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TemplateMapper">
	
	<!--表名 -->
	<sql id="tableName">
		T_TEMPLATE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ID,
		NAIRE_TEMPLATE_ID,	
		CODE,
		NAME,
		CUSTOM_TEMPLATE_ID,
		ISUSE,	
		CREATEMAN,
		CREATEDATE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},
		#{NAIRE_TEMPLATE_ID},	
		#{CODE},
		#{NAME},
		#{CUSTOM_TEMPLATE_ID},
		#{ISUSE},
		#{CREATEMAN},
		sysdate
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
		NAIRE_TEMPLATE_ID=#{NAIRE_TEMPLATE_ID},	
		CODE=#{CODE},
		NAME=#{NAME},
		CUSTOM_TEMPLATE_ID=#{CUSTOM_TEMPLATE_ID},
		ISUSE=#{ISUSE},	
		CREATEMAN=#{CREATEMAN},
		CREATEDATE=sysdate
		where 
			ID = #{ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</select>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findByCode" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			CODE = #{CODE}
			<if test="ID!= null and ID != ''"><!-- 关键词检索 -->
				and ID != #{ID}
			</if>
	</select>
	
	
	<!-- 列表 -->
	<select id="datalist" parameterType="page" resultType="pd">
		select 
		a.ID,
		a.NAIRE_TEMPLATE_ID,	
		a.CODE,
		a.NAME,
		a.CUSTOM_TEMPLATE_ID,
		a.ISUSE,	
		a.CREATEMAN,
		a.CREATEDATE,
		b.NAME as NAIRE_TEMPLATE_NAME,
		c.NAME as CUSTOM_TEMPLATE_NAME
		  
		from  
		<include refid="tableName"></include>  a 
		 left join T_NAIRE_TEMPLATE b  on b.ID=a.NAIRE_TEMPLATE_ID
     	left join T_CUSTOM_TEMPLATE c on c.id=a.CUSTOM_TEMPLATE_ID
		
		where 1=1
		<if test="pd.NAIRE_TEMPLATE_ID!= null and pd.NAIRE_TEMPLATE_ID != ''"><!-- 关键词检索 -->
			and NAIRE_TEMPLATE_ID = #{pd.NAIRE_TEMPLATE_ID}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ISUSE='1'
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
            #{item}
		</foreach>
	</delete>
	
	
	
	<!-- 351412933 -->
</mapper>